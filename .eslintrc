{
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
     "parser": "babel-eslint",
      "ecmaVersion": 2015,
      "sourceType": "module"
    },
    "rules": {
      "indent": [2, 2],
      "max-len": [2, 100],
      "no-irregular-whitespace": [2],
      "no-multi-spaces": [2],
      "block-spacing": [2],
      "no-mixed-spaces-and-tabs": [2],
      "no-trailing-spaces": [2],
      "no-whitespace-before-property": [2],
      "space-before-blocks": [2],
      "space-in-parens": [2],
      "space-infix-ops": [2],
      "keyword-spacing": [2],
      "vue/max-attributes-per-line": [0],
      "prefer-const": [2]
    },
    "extends": ["plugin:vue/recommended"]
  }